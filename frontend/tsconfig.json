{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@constants/*": ["./src/constants/*"],
      "@routes/*": ["./src/routes/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
